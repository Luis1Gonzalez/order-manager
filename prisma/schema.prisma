// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  password String
}

model Entry {
  id          Int     @id @default(autoincrement())
  tittle      String
  description String
  price       String?
  photoUrl    String?
}

model Product {
  id   Int    @id @default(autoincrement())
  name String
}

model OurClient {
  id     Int     @id @default(autoincrement())
  name   String
  phone  String     @unique
  orders Order[]
}

model Order {
  id           Int    @id @default(autoincrement())
  product      String
  quantity     Float
  unit         String
  total        Int
  creationDay  String
  creationHour String
  colletDay    String
  colletHour   String
  client       OurClient @relation(fields: [clientPhone], references: [phone])
  clientPhone  String
  name        String
}
